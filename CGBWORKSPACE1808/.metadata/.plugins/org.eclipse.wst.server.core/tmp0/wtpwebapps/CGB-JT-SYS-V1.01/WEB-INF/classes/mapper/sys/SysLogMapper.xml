<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jt.sys.dao.SysLogDao">
	<insert id="insertObject" parameterType="com.jt.sys.entity.Syslog">
		insert into sys_logs
       	(username,operation,method,params,time,ip,createdTime)
       	values
		(#{username},#{operation},#{method},#{params},#{time},#{ip},#{createdTime})
	</insert>
		<!-- 基于id执行删除操作 -->
	<delete id="deleteObjects">
		delete from sys_logs
		where id in
		<foreach collection="ids"
				 open="("
				 close=")"
				 separator=","
				 item="id">
			#{id}
		</foreach>
	</delete>
	<!-- Sql标签用于定义映射元素中的sql共性,其他元素用到此元素时,可以include包含 -->
	<sql id="queryWhereId">
		<where>
			<if test="username!=null and username!=''">
				username like concat("%",#{username},"%")
			</if>
		</where>
	</sql>
	<select id="getRowCount"
			resultType="int">
			select count(*) from sys_logs
			<include refid="queryWhereId"></include>
	</select>
	<select id="findPageObjects"
			resultType="com.jt.sys.entity.Syslog">
			select * from sys_logs
			<include refid="queryWhereId"></include>
			order by createdTime desc
			limit #{startIndex},#{pageSize}
	</select>
</mapper>