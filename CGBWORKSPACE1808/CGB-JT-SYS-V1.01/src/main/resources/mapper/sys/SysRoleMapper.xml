<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jt.sys.dao.SysRoleDao">
	<update id="updateObject"
			parameterType="com.jt.sys.entity.SysRole">
		update sys_roles
		set name=#{name},
			note=#{note},
			modifiedUser=#{modifiedUser},
			modifiedTime=now()
		where id=#{id}
	</update>
	<resultMap type="com.jt.sys.vo.SysRoleVo" 
				id="sysRoleVo">
		<!-- one2many -->
		<id column="id" property="id"/>
		<collection property="menuIds"
					column="id"
					select="com.jt.sys.dao.SysRoleMenuDao.findMenuIdsByRoleId">
		</collection>
	</resultMap>
	<!-- 基于角色id获取角色与其相关联的菜单id -->
	<select id="findObjectById"
			resultMap="sysRoleVo">
		select id,name,note
		from sys_roles 
		where id=#{id}
	</select>
	<select id="findPageObjects"
			resultType="com.jt.sys.entity.SysRole">
		select * from sys_roles
		<include refid="queryWhereId"></include>
		order by createdTime desc
		limit #{startIndex},#{pageSize}
	</select>
	<select id="getRowCount"
			resultType="int">
		select count(*)
		from sys_roles
		<include refid="queryWhereId"></include>
	</select>
	<sql id="queryWhereId">
		<where>
			<if test="name!=null and name!=''">
				name like concat("%",#{name},"%")
			</if>
		</where>
	</sql>
	<delete id="deleteObject"
			parameterType="int">
		delete from sys_roles
		where id=#{id}
	</delete>
	
	<insert id="insertObject"
			parameterType="com.jt.sys.entity.SysRole" useGeneratedKeys="true" keyProperty="id">
		insert into sys_roles
		(id,name,note,createdTime,modifiedTime,
		createdUser,modifiedUser)
		values
		(null,#{name},#{note},now(),now(),
		#{createdUser},#{modifiedUser})	
	</insert>
</mapper>